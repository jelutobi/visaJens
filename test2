public class HelloWorld{

     public static void main(String []args){
        System.out.println("Skriv in minuter s책 ska vi r채kna lite");
		int inputMinutes = 527865; //******************************************************//
        System.out.print("Du skrev in " + inputMinutes + " minuter. ");

		int hours = 0;
		int days = 0;
		int years = 0;

		// Skala bort 책r
		while(inputMinutes >= (365 * 24 * 60)) {
			inputMinutes -= 365 * 24 * 60;
			years++;
		}

		// Skala bort dagar
		while(inputMinutes >= (60 *24)) {
			inputMinutes -= 60 * 24;
			days++;
		}
		
		// Skala bort dagar
		while(inputMinutes >= 60) {
			inputMinutes -= 60;
			hours++;
		}

		System.out.print("Det blir " + years + " 책r, " + days + " dagar, " + hours + " timmar och " + inputMinutes + " minuter.");
     }
}
